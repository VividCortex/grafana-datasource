{
  "name": "vividcortex-metrics-datasource",
  "version": "0.0.1",
  "description": "Grafana datasource plugin for VividCortex metrics.",
  "scripts": {
    "build": "grunt",
    "watch": "grunt watch",
    "test": "mocha -r ts-node/register specs/**/*.spec.ts",
    "test:coverage": "nyc mocha -r ts-node/register specs/**/*.spec.ts",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "precommit": "pretty-quick --staged",
    "lint": "yarn eslint src/*.ts src/**/*.ts",
    "bump:patch": "npm-bump patch",
    "bump:minor": "npm-bump minor",
    "bump:major": "npm-bump major",
    "release:patch": "npm-run-all build bump:patch",
    "release:minor": "npm-run-all build bump:minor",
    "release:major": "npm-run-all build bump:major"
  },
  "author": "VividCortex",
  "license": "MIT",
  "dependencies": {
    "moment": "^2.22.0",
    "q": "^1.5.1",
    "systemjs": "^0.21.1"
  },
  "nyc": {
    "extension": [".ts"],
    "exclude": ["**/*.d.ts", "specs", "dist", "Gruntfile.js"],
    "reporter": ["text"],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "grafana-sdk-mocks": "github:grafana/grafana-sdk-mocks",
    "grunt": "^1.0.2",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-typescript": "^0.8.0",
    "husky": "^0.14.3",
    "load-grunt-tasks": "^3.5.2",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1",
    "plugin-typescript": "^8.0.0",
    "prettier": "1.11.1",
    "pretty-quick": "^1.4.1",
    "sinon": "^4.5.0",
    "systemjs-plugin-css": "^0.1.37",
    "ts-node": "^6.0.0",
    "typescript": "2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  }
}
